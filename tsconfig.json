{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "build",
    "module": "ES2022",
    "target": "ES2022",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "types": ["node"],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strictPropertyInitialization": false,
    "allowImportingTsExtensions": true,
    "noEmit": true,

    "baseUrl": "./src",
    "paths": {
      "@modules/*": ["modules/*"]
    }
  },
  "ts-node": {
    "esm": true,
    "transpileOnly": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "build"]
}
